{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2015",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": false,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "./build/",
      "sourceMap": false,
      "allowJs": false
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "./node_modules"
    ]
  }